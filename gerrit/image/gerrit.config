[gerrit]
  basePath = git
  canonicalWebUrl = <gerrit_canonicalWebUrl>

[database]
  type = h2
  database = db/ReviewDB

[index]
  type = LUCENE

[auth]
  type = ldap
  gitBasicAuth = false64276adf88bb/q/status:open+-is:wip

[ldap]
  server = <ldap_server>
  username=<ldap_username>
  accountBase = <ldap_accountBase>
  accountPattern = (&(objectClass=person)(uid=${username}))
  accountFullName = displayName
  accountEmailAddress = mail

[sendemail]
  smtpServer = localhost

[sshd]
  listenAddress = *:29418

[httpd]
  listenUrl = http://*:8080/

[cache]
  directory = cache

[container]
  user = root